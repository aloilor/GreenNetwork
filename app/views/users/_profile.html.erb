<h1 class="text-center" style="margin-top:5%">Profile</h1>

<div class = "row">
    <div class = "col-8 offset">
        <% if user.posts.any? %>
            <%= render partial: "posts/post",collection: user.posts.reverse_order%>
        <% end %>
    </div>
    <div class = "col-4">    
        <div class="card border-0" style="margin-right:50px">
            <% if current_user.propic.attached? %> 
              <%= image_tag current_user.propic, 
              style: "width: 200px; height: 200px;margin-left:180px", 
              class: "rounded-circle border "%>
            <% end %>    
           
            <h2 class="text-center"><%=user.username%></h2>
            <hr>
            <div class="card-body">
            <% if !user.description.present? %>
                <p class="card-text"><em>Add a description</em></p>
            <% else %>
                <p class="card-text" ><h5><em style="color:gray"><%= user.description %></em></h5></p>
            <% end %>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            
             <%= link_to 'Settings', edit_user_registration_path(user),
                class:"bi bi-gear-fill btn btn-default btn-primary " %>  
                
        </div>
</div>
     
