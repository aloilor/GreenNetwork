
<div class = "container" style = "margin-top:1%"%>
    <!-- Bottone per creare un nuovo post -->
    <button type="button" class="btn btn-primary btn-lg">
      <i class="fas fa-plus fa-lg	"></i>
      <a href = "#"><%= link_to 'New post', new_post_path, style: "color:white; font-weight: bold;" %></a>
    </button>
</div>

<% @posts.each do |post| %>
  <%# usato un parziale in quanto sia index che show fanno riferimento alla stessa interfaccia html post %>
  <%= render 'post', post: post %>
<% end %> 




