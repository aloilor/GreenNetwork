<div class="container">

    <div class="card gedf-card" style = "margin-top: 2%; margin-bottom: 1%">
      <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex justify-content-between align-items-center">
                  <div class="mr-2">
                  <%# immagine profilo %>
                      <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                  </div>

                  <!-- Nome utente -->
                  <div class="ml-2">
                      <div class="h5 m-3"><%=post.user.username%></div>
                  </div>
              </div>
          </div>
      </div>

      <div class="card-body">
      
          <h2 class="card-title"><b><%= link_to post.title, post %></b></h2>

          <p class="text-muted h7 mb-2"><%= post.created_at.strftime("Created at %d/%m/%Y, %I:%M%p") %></p>
         
          <%# Effettuiamo il check, se l'immagine Ã¨ effettivamente associata al record%>
    
          <% if post.image.attached? %> 
            <%= image_tag post.image, style: "width:35%;", class: "border border-success rounded border-2 float-left", align:"left" %>
          <% end %>
          <div class="h5" >
            <%= post.description %>
           </div> 
      </div>
      
      <div class="card-footer">

          <div class="d-flex align-items-center justify-content-start">
            <span class = "like_count" <%post.id%>'>
              <%= post.get_likes.size %>
              <i class="fas fa-thumbs-up"></i>
            </span>

            &nbsp; &nbsp;
            <% if user_signed_in? %>
              <a href="#" class="card-link">
                <% if current_user.liked? post %>
                  <div> <%= link_to like_post_path(post, 'unlike'), class: "liked-btn", method: :put, remote: :true do %>
                    Liked
                  </div>
                <% end %>
                
                <% else %>
                  <div> <%= link_to like_post_path(post, 'like'), class: "like-btn", method: :put, remote: :true do %>
                    Like
                  </div>
                <% end %>
                <% end %>              
              </a>
              
              &nbsp; &nbsp;

              <a href="#" class="card-link">Comment</a>
              
            <% end%>
            <p class="card-text ms-auto">
              <span class="badge bg-primary"><%= post.tag%></span> &nbsp; <%= post.position%>
            </p>
          </div>
      </div>
    </div>

</div>
