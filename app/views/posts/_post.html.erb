<div class="container">

    <div class="card gedf-card" style = "margin-top: 2%; margin-bottom: 1%">
      <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex justify-content-between align-items-center">
                  <div class="mr-2">
                  <%# immagine profilo %>
                      <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                  </div>

                  <!-- Nome utente -->
                  <div class="ml-2">
                      <div class="h5 m-3">Autore</div>
                  </div>
              </div>
          </div>
      </div>

      <div class="card-body">
      
          <h2 class="card-title"><b><%= link_to post.title, post %></b></h2>

          <p class="text-muted h7 mb-2"><%= post.created_at.strftime("Created at %d/%m/%Y, %I:%M%p") %></p>
          
          <p class="card-text">
            immagine
            <%= post.image %>
          </p>

          <p class="card-text">
            <%= post.description %>
          </p>
      </div>
      
      <div class="card-footer">

          <div class="d-flex align-items-center">
            <a href="#" class="card-link">Like</a>
            <a href="#" class="card-link">Comment</a>
            
            <p class="card-text ms-auto">
              <%= post.tag %>, <%= post.position%>
   
            </p>

          </div>
      </div>
    </div>

</div>
